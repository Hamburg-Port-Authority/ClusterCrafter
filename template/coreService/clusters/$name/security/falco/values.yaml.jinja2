psp:
  enabled: "true"
  privileged: {{ coreServices.security.falco.privilegedPspName }}

falco:
  image:
    registry: {{ coreServices.security.falco.imageRegistry }}
  driver:
    loader:
      enabled: {{ coreServices.security.falco.enableDriverLoader }}
      initContainer:
        image:
          registry: {{ coreServices.security.falco.imageRegistry }}
  falcoctl:
    image:
      registry: {{ coreServices.security.falco.imageRegistry }}
    artifact:
      install:
        env: 
          - name: HTTP_PROXY
            value: '{{ defaults.defaultHttpProxy }}'
          - name: HTTPS_PROXY
            value: '{{ defaults.defaultHttpProxy }}'
          - name: http_proxy
            value: '{{ defaults.defaultHttpProxy }}'
          - name: https_proxy
            value: '{{ defaults.defaultHttpProxy }}'
          - name: no_proxy
            value: "{{ defaults.defaultNoProxy }}"
          - name: NO_PROXY
            value: "{{ defaults.defaultNoProxy }}"
      follow:
        env: 
          - name: HTTP_PROXY
            value: '{{ defaults.defaultHttpProxy }}'
          - name: HTTPS_PROXY
            value: '{{ defaults.defaultHttpProxy }}'
          - name: http_proxy
            value: '{{ defaults.defaultHttpProxy }}'
          - name: https_proxy
            value: '{{ defaults.defaultHttpProxy }}'
          - name: no_proxy
            value: "{{ defaults.defaultNoProxy }}"
          - name: NO_PROXY
            value: "{{ defaults.defaultNoProxy }}"

falco-exporter:
  image:
    registry: {{ coreServices.security.falco.imageRegistry }}