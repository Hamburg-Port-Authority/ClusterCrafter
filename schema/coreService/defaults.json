{
    "$id": "https://hpa.hamburg.de/coreService/defaults.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Cluster Defaults Schema",
    "type": "object",
    "properties": {
      "defaultStorageClass": {
        "type": "string",
        "description": "The default storage class to use with every deployment."
      },
      "defaultServiceUri": {
        "type": "string",
        "description": "Service URI under which every base-service should be made available. For example: devops..de"
      },
      "defaultHttpProxy": {
        "type": "string"
      },
      "defaultHttpsProxy": {
        "type": "string"
      },
      "defaultNoProxy": {
        "type": "string"
      }
    },
    "required": ["defaultStorageClass", "defaultServiceUri", "defaultHttpProxy", "defaultHttpsProxy", "defaultNoProxy"]
  }