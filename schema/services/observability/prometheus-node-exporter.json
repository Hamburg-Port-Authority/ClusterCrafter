{
  "$id": "https://hpa.hamburg.de/services/observability/prometheus-node-exporter.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Service Prometheus Node Exporter Schema",
  "type": "object",
  "properties": {
    "imageRegistry":  {
      "type": "string",
      "description": "Image registry to use. For example: quay.io",
      "default": "quay.io"
    },
    "imageRepository": {
      "type": "string",
      "description": "Repository under which the image is available. For example: prometheus/node-exporter",
      "default": "prometheus/node-exporter"
    }
  },
  "required": ["image-registry", "image-repository"]
}