{
    "$id": "https://hpa.hamburg.de/services/services.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Cluster Services Schema",
    "type": "object",
    "properties": {
      "defaultStorageClass": {
        "type": "string",
        "description": "The default storage class to use with every deployment."
      },
      "defaultServiceUri": {
        "type": "string",
        "description": "Service URI under which every base-service should be made available. For example: devops..de"
      },
      "coreServices": {
        "type": "object",
        "$ref": "services/coreServices.json"
      }
    },
    "required": ["defaultStorageClass", "defaultServiceUri", "coreServices"]
  }