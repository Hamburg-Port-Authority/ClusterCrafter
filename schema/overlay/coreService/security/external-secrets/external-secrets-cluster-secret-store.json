{
    "$id": "https://hpa.hamburg.de/overlay/coreService/security/external-secrets/external-secrets-cluster-secret-store.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Service External Secrets Cluster Secret Store Schema",
    "type": "object",
    "properties": {
      "enabled":  {
        "type": "string",
        "description": "Flag to trigger the deployment of a ClusterSecretStore",
        "default": "true"
      },
      "tenantId": {
        "type": "string",
        "description": "The tenant id to use"
      },
      "vaultUrl": {
        "type": "string",
        "description": "Designated vault to use via url"
      }
    },
    "required": ["enabled"]
  }